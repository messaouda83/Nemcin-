{% extends "admin/partials/base.admin.html.twig" %}

{% block title %}Delete genre | Admin{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ baseUrl }}/assets/css/formStyle.css">
{% endblock %}

{% block body %}

    <div class="container mt-5">
        <p class="lead text-center">Be sure to understand than this action is irreversible and cannot be restored !</p>
    </div>


    <div class="container" id="form-container">
        <form action="{{ baseUrl }}/admin/genre/delete" method="post" id="form-data" class="pb-3">
            <div class="input-group" id="genre-text">
                <div class="input-group-prepend form-group">
                    <label class="input-group-text" for="genre-delete">Genre to delete:</label>
                </div>
                <select class="custom-select" name="genre-delete" id="genre-delete">
                    <option value="">--Please choose a genre--</option>
                    {% if arrayGenres is defined %}
                        {% for id, genre in arrayGenres %}
                            <option name="{{ id }}" id="{{ id }}">{{ genre }}</option>
                        {% endfor %}
                    {% endif %}
                </select>
            </div>
            <div id="form-btn-group">
                <input type="button" value="Delete genre" class="btn btn-primary" data-toggle="modal"
                       data-target="#deleteGenreModal">
                <input type="reset" value="Reset" class="btn btn-danger">
            </div>
            <div class="modal fade" id="deleteGenreModal" tabindex="-1" role="dialog"
                 aria-labelledby="deleteGenreModalTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteGenreModalTitle">Are you sure ?</h5>
                            <button class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this genre ?</p>
                        </div>
                        <div class="modal-footer">
                            <input type="button" value="Close" class="btn btn-danger" data-dismiss="modal">
                            <input type="submit" value="Delete genre" class="btn btn-primary">
                        </div>
                    </div>
                </div>
            </div>
        </form>
        {% if editGenre is defined %}
            {% if editGenre == true %}
                <div class="alert alert-success" role="alert">
                    Genre deleted with success !
                </div>
            {% else %}
                <div class="alert alert-danger" role="alert">
                    Error when deleting the genre !
                </div>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}

{% block footer %}
{% endblock %}

{% block javascripts %}
{% endblock %}