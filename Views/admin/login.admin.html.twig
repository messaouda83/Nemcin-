{% extends "admin/partials/login.admin.html.twig" %}

{% block title %}Admin login{% endblock %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ baseUrl }}/assets/css/adminLoginForm.css">
    {% endblock %}

{% block body %}
    <div class="text-center w-100">
        <form action="{{ baseUrl }}/admin/login" method="post" class="form-signin">
            <img src="{{ baseUrl }}/assets/img/logo.svg" alt="Logo" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email address" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password" required>
            <input type="submit" value="Sign in" class="btn btn-lg btn-primary btn-block">
            <p class="mt-5 mb-3 text-muted">&copy; 2020 - {{ "now"|date("Y") }}</p>
        </form>
    </div>


{% endblock %}
